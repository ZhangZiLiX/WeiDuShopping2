<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg_wdf"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:id="@+id/txt_tuichu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:textColor="#b4ff0000"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:text="退出登录"
            />
    </RelativeLayout>


    //我的Fragmente 界面的布局
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_circle_wdf"
            android:layout_marginTop="60dp"
            >

            //个人资料
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="120dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/grzl_wdf"
                    android:layout_marginLeft="24dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/txt_gerenziliao_wdf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textColor="#848383"
                    android:text="个人资料"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#b4b0b0"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="20dp"
                />
            //我的圈子
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/wdqz_wdf"
                    android:layout_marginLeft="24dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/txt_wodequanzi_wdf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textColor="#848383"
                    android:text="我的圈子"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#b4b0b0"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="30dp"
                />
            //我的足迹
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zj_wdf"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="7dp"
                    />
                <TextView
                    android:id="@+id/txt_wodezuji_wdf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textColor="#848383"
                    android:text="我的足迹"
                    android:layout_marginLeft="30dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#b4b0b0"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="20dp"
                />
            //我的钱包
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/wdqb_wdf"
                    android:layout_marginLeft="24dp"
                    />
                <TextView
                    android:id="@+id/txt_wodeqianbao_wdf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textColor="#848383"
                    android:text="我的钱包"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#b4b0b0"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="30dp"
                />
            //我的收货地址
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/shdz_wdf"
                    android:layout_marginLeft="24dp"
                    />
                <TextView
                    android:id="@+id/txt_wodeshouhuodizhi_wdf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textColor="#848383"
                    android:text="我的收货地址"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#b4b0b0"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="30dp"
                />
        </LinearLayout>


        //头像
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_touxiang_wdf"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/touxiang_wdf"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            />
         <TextView
             android:id="@+id/txt_username_wdf"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="20dp"
             android:textColor="#848383"
             android:text="撑油纸伞的女孩"
             android:layout_below="@+id/img_touxiang_wdf"
             android:gravity="center"
             android:layout_marginTop="30dp"
             />

    </RelativeLayout>

</LinearLayout>