<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_circle_zdf"
        android:layout_margin="10dp"
        android:layout_below="@+id/txt_title_newadd"
        >
        //第一行
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="15dp"
                android:textColor="#7c7979"
                android:text="收件人:"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
            //新增收件人
            <TextView
                android:id="@+id/txt_newusername_btnwd_wdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="90dp"
                android:textSize="15dp"
                android:textColor="#7c7979"
                android:gravity="center"
                android:text=""
                />
        </RelativeLayout>
        //下划线
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#bcbbbb"
            />

        //第二行
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="15dp"
                android:textColor="#7c7979"
                android:text="手机号码:"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
            //昵称
            <TextView
                android:id="@+id/txt_newuserphone_btnwd_wdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="90dp"
                android:text=""
                />
        </RelativeLayout>
        //下划线
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#bcbbbb"
            />
        //第三行
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="15dp"
                android:textColor="#7c7979"
                android:text="所在地区:"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/txt_newuserdiqu_btnwd_wdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="90dp"
                android:layout_centerVertical="true"
                android:text=""
                />
        </RelativeLayout>
        //下划线
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#bcbbbb"
            />
        //第二行
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="15dp"
                android:textColor="#7c7979"
                android:text="详细地址:"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
            //详细地址
            <TextView
                android:id="@+id/txt_newuserxiangxiadd_btnwd_wdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="90dp"
                android:text=""
                />
        </RelativeLayout>
        //下划线
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#bcbbbb"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="15dp"
                android:textColor="#7c7979"
                android:text="邮政编码:"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
            //详细地址
            <TextView
                android:id="@+id/txt_newuseryzbianma_btnwd_wdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="90dp"
                android:text=""
                />
        </RelativeLayout>
        //下划线
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#bcbbbb"
            android:layout_marginBottom="10dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:id="@+id/txt_morendress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="设置为默认地址"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_dingdan"
                android:padding="10dp"
                />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>